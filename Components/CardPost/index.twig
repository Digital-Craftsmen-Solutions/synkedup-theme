{% set title = model.title %}
{% set description = model.description %}
{% set subtitle = model.subtitle %}
{% set backgroundImage = model.backgroundImage %}
{% set actionButton = model.actionButton %}
{% set options = options is defined ? options : model.options %}

<div {{ ' data-theme="' ~ options.theme ~ '"' }} class="relative flex flex-col bg-white border border-border-card rounded-2xl md:rounded-3xl overflow-hidden dark:bg-dark-shade dark:border-0">
	<div class="grid md:grid-cols-12 gap-4 p-4 md:p-6 gap-6 md:gap-8">
		{% if backgroundImage %}
			<div class="md:col-span-5">
				{% include '@Components/Common/_image.twig' with {
				model: backgroundImage,
				class: 'w-full h-auto rounded-xl min-h-50!'
			} only %}
			</div>
		{% endif %}

		<div class="flex flex-col space-y-4 md:col-span-7">
			{% if subtitle %}
				<p class="text-sm font-bold text-primary uppercase">{{ subtitle }}</p>
			{% endif %}
			<h3 class="text-lg md:text-xl font-medium text-heading dark:text-white {{hasAction ? 'group-hover:underline'}}">{{ title }}</h3>
			{% if description %}
				<p class="text-text dark:text-text-dark">{{ description }}</p>
			{% endif %}
			{% if actionButton %}
				<div class="pt-3 md:pt-6 mt-auto">
					{% include '@Components/Button/index.twig' with { model: actionButton } only %}
				</div>
			{% endif %}
		</div>
	</div>
</div>
