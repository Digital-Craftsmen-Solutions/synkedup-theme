{% set url = model.url %}
{% set prefill = model.prefillFromQuery is defined ? model.prefillFromQuery : true %}
{% set height = 600 %}

<flynt-component name="BlockCalendlyEmbed" load:on="visible">
{% if url %}
<div class="blockCalendlyEmbed bg-white border border-border-card rounded-2xl md:rounded-3xl p-2 md:p-8">
  <div id="calendly-container" class="js-calendlyWidget"
       data-url="{{ url }}"
       data-allow-prefill="{{ prefill ? '1' : '0' }}"
       style="min-width: 260px; height: {{ height }}px;"></div>
</div>
{% endif %}
</flynt-component>
