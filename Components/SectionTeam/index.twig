{% set icon = model.icon %}
{% set heading = model.heading %}
{% set team = model.team|default([]) %}
{% set options = options is defined ? options : model.options %}

<flynt-component name="SectionTeam" {{ options.theme ? 'data-theme="' ~ options.theme ~ '"' }} class="edge sand bg-shade dark:bg-dark">
	<section class="tw-section tw-section-gap flex flex-col gap-8 lg:gap-12">
		{% if heading %}
			{% include '@Components/Heading/index.twig' with { model: heading } only %}
		{% endif %}
		<div class="grid grid-cols-2 sm:grid-cols-4 gap-8 items-center justify-center">
			{% for team in team %}
				<div class="flex justify-center items-center">
					{% include '@Components/Team/index.twig' with {
						model: team,
						options: options
					} only %}
				</div>
			{% endfor %}
		</div>
	</section>
</flynt-component>
