{% set image = model.image %}
{% set options = options is defined ? options : model.options %}
{% set name = model.name %}
{% set role = model.role %}


<div {{ options.theme ? ' data-theme="' ~ options.theme ~ '"' }} class="text-center relative rounded-xl overflow-hidden w-full max-w-xs bg-shade dark:bg-dark-shade">
	{% include '@Components/Common/_image.twig' with {
    model: image,
    class: 'w-full h-full object-cover rounded-xl'
  } only %}
	<div class="absolute bottom-2 left-2 right-2 bg-white/70 dark:bg-dark-shade/70 backdrop-blur-xs rounded-lg p-1">
		<h3 class="text-sm font-medium text-heading sm:text-base lg:text-lg dark:text-white">
			{{ name }}
		</h3>
		<p class="text-xs text-muted sm:text-sm lg:text-base dark:text-text-dark">
			{{ role }}
		</p>
	</div>
</div>
