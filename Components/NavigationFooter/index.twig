<flynt-component name="NavigationFooter" data-theme="light" class="bg-shade sand">
	<div class="w-full max-w-352 mx-auto px-4 lg:px-8 py-5 lg:py-10">
		<nav
			aria-label="{{ labels.ariaLabel }}" class="bg-white border border-border rounded-2xl md:rounded-3xl py-5 lg:py-10 px-4 lg:px-8">

			<!-- Grid -->
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-8 lg:mb-10 ">
				<div class="col-span-full flex gap-6 {{useSlim ? 'flex-col lg:flex-row align-center justify-between' : 'lg:col-span-1 flex-col'}} ">
					<div>
						{% include '/Components/NavigationMain/Partials/_logo.twig' with {'logo': logo, 'site': site} only %}
						<div class="mt-4">
							<div class="flex items-start gap-2 text-sm text-text">
								{% include '@Components/Common/_icon.twig' with { name: 'marker', ariaLabel: 'Location Icon', class: 'shrink-0 size-4 mt-0.5 text-text' } %}
								<div class="{{useSlim ? 'break-hidden' }}">{{ address|e('wp_kses_post') }}</div>
							</div>
						</div>
					</div>
					<div class="flex gap-2 items-center">
						{% include '/Components/NavigationMain/Partials/_logo.twig' with {'logo': app_store_logo, 'site': app_store_site} only %}
						{% include '/Components/NavigationMain/Partials/_logo.twig' with {'logo': play_store_logo, 'site': play_store_site} only %}
					</div>
				</div>
				<!-- End Col -->

				{% if not useSlim %}
					{% include 'Partials/_menu.twig' with {'menu1': menu1, 'menu2': menu2} only %}
				{% endif %}

			</div>
			<!-- End Grid -->

			<div class="pt-5 mt-5 border-t border-gray-200">
				<div class="flex flex-col sm:flex-row sm:justify-between gap-3">

					<div class="flex">
						{% include '/Components/NavigationMain/Partials/_socials.twig' only %}
					</div>

					<div class="text-sm flex flex-col sm:flex-row gap-3">
						{% for item in menu5.items %}
							<a class="text-text hover:underline hover:text-heading focus:outline-hidden focus:underline focus:text-heading" href="{{ item.link|e('esc_url') }}" {{ item.is_external or item.is_target_blank ? 'target="_blank" rel="noopener noreferrer"' }}>
								{{ item.title }}
							</a>
						{% endfor %}
						<div class="text-gray-600">{{ copyright }}</div>
					</div>

				</div>
			</div>
		</nav>
	</div>
</flynt-component>
