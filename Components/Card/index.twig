{% set type = model.type %}
{% set item = {
	type: model.type,
	icon: model.icon,
	image: model.image,
	title: model.title,
	figure: model.figure,
	description: model.description,
	features: model.features,
	options: model.options
} %}
{% set badge = model.badge %}
{% set actionButton = model.actionButton %}
{% set options = options is defined ? options : model.options %}


<div {{ options.theme ? ' data-theme="' ~ options.theme ~ '"' }} class="relative flex flex-col bg-white border border-border-card rounded-2xl overflow-hidden p-4 py-5 md:p-6 dark:bg-dark-shade dark:border-0 {{ options.align == 'center' ? 'items-center text-center' : '' }}">
	{% include '@Components/ItemBox/index.twig' with { model: item, options: options } only %}
	{% if model.features %}
		<ul class="flex flex-col gap-3 md:gap-4 list-none ps-0 pt-2 md:pt-4">
			{% for item in model.features %}
				<li class="flex items-center gap-2">
					{% include '@Components/Common/_icon.twig' with { name: item.icon ?? 'check', class: 'flex-shrink-0 size-5 text-primary' } %}
					<span class="text-text dark:text-text-dark">{{ item.label }}</span>
				</li>
			{% endfor %}
		</ul>
	{% endif %}
	{% if actionButton %}
		<div class="pt-3 md:pt-6 mt-auto">
			{% include '@Components/Button/index.twig' with { model: actionButton } only %}
		</div>
	{% endif %}
	{% if badge %}
		<p class="absolute top-4 right-4 md:top-6 md:right-6">
			{% include '@Components/Badge/index.twig' with { model: badge } only %}
		</p>
	{% endif %}
</div>
