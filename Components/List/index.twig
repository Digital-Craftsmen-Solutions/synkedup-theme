{% set features = model %}
{% set options = options is defined ? options : model.options %}
{% set imageDisplay = options.imageDisplay  %}

<ul class="flex flex-col gap-3 md:gap-4 list-none ps-0 pt-2 md:pt-4 {{imageDisplay == 'full' ? 'md:flex-row justify-center' : ''}}">
	{% for item in features %}
		{% set icon = item.icon ?? 'checkGreen' %}
		{% set checkGreen = item.icon == 'checkGreen' %}

		<li class="flex items-start gap-2">
			{% include '@Components/Common/_icon.twig' with { name: checkGreen ? 'check' : icon, class: checkGreen ? 'mt-1 flex-shrink-0 size-4.5 text-white bg-success p-1 rounded-full': 'mt-1 flex-shrink-0 size-5 text-primary' } %}
			<div class="flex flex-col gap-1">
				{% if item.title %}
					<span class="text-heading dark:text-white font-medium">{{ item.title }}</span>
				{% endif %}
				<span class="text-text dark:text-text-dark text-lg">{{ item.label }}</span>
			</div>
		</li>
	{% endfor %}
</ul>

{% include '@Components/Common/_json.twig' with {value: model, varName: 'model'} %}
