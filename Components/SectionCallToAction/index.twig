{% set heading = model.heading|default([]) %}
{% set action = model.action %}
{% set options = options is defined ? options : model.options %}
{% set display = options.display ?? 'full' %}
{% set heading = model.heading %}
{% set heading = heading|merge({ type: 'h3' }) %}
{% set theme =  options.theme == 'alt' ? 'dark' : options.theme %}
{% set altMode =  options.theme == 'alt'  %}
{% set title =  heading.before|default('') ~ heading.highlight|default('') ~ heading.after|default('')  %}
{% set longTitle = title|length > 30  %}
{% set description =  heading.description  %}
{% if longTitle %}
	{% set heading = heading|merge({ description: null }) %}
{% endif %}

<flynt-component name="SectionCallToAction" {{ options.theme ? 'data-theme="' ~ theme ~ '"' }}>
	<section class="max-w-7xl mx-auto py-6 md:py-12 lg:py-24 px-4 md:px-6 lg:px-8 bg-shade {{altMode ? 'dark:bg-dark' : 'dark:bg-shade'}}">
		<div class="bg-gray-200 border border-border-card rounded-3xl {{altMode ? 'dark:bg-primary' : 'dark:bg-dark'}} dark:border-0 overflow-hidden">
			<div
				class="{{display == 'full' ? 'flex flex-col p-4 md:p-8 lg:p-10 md:px-14 lg:px-16' : 'grid md:grid-cols-12 p-4 md:p-6 lg:p-10 gap-5 lg:gap-6'}} {{longTitle ? 'lg:py-12 sm:gap-6' : ''}}">
				{# Col 1 #}
				<div class="flex flex-col gap-4 justify-center {{display == 'full' ? '' : 'md:col-span-6' ~ (longTitle ? '' : ' lg:col-span-7') }}">
					{% if heading %}
						{% include '@Components/Heading/index.twig' with { model: heading, options: {align: display == 'full' ? 'center' : 'left', hideHighlight: altMode} } only %}
					{% endif %}
					{% if action and display == 'full' %}
						{% include '@Components/Action/index.twig' with { model: action, options: {align: display == 'full' ? 'center' : 'left'} } only %}
					{% endif %}
				</div>

				{# Col 2 #}
				{% if display != 'full' %}
					<div class="flex flex-col justify-center {{longTitle ? 'md:items-start' : 'md:items-end'}} md:col-span-6 {{longTitle ? '' : 'lg:col-span-5'}} gap-4">
						{% if longTitle and description %}
							<div class="prose prose-p:space-y-2 dark:text-text-dark max-w-none">
								{{ description|e('wp_kses_post') }}
							</div>
						{% endif %}
						{% if action %}
							{% include '@Components/Action/index.twig' with { model: action, options: {align: display == 'full' ? 'center' : 'left'} } only %}
						{% endif %}
					</div>
				{% endif %}
			</div>
		</div>
	</section>
</flynt-component>
