{% set hero = model.hero %}
{% set content = model.content %}
{% set categories = model.categories %}
{% set carousel = model.carousel %}
{% set author = model.author %}

{% include '@Components/SectionHeroFull/index.twig' with {model: hero, options: {theme: 'dark', display: 'full', textAlign: 'center'}} %}

<article>
	<flynt-component data-theme="light" class="edge sand bg-shade dark:bg-dark">
		<section class="tw-section tw-section-gap flex flex-col gap-8 lg:gap-12">
			<div class="max-w-5xl mx-auto">
				<div class="text-text dark:text-text-dark tw-prose">
					{{ content }}
				</div>
			</div>
		</section>
	</flynt-component>
</article>

{{ renderComponent('SectionCarouselCards', {
	taxonomies: categories, 
	heading: carousel.heading,
	heading: {
		'before': 'Related Articles',
		'type': 'h3',
	}, 
	actionType: carousel.actionType,
	ctaButtons: carousel.ctaButtons,
	'options': {'theme': 'dark', display: 'imageOverlay' } }) 
}}

{{ renderComponent('BlogPostFooter') }}
