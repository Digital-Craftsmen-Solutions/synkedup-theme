{% set heading = model.heading %}
{% set action = model.action %}
{% set stats = model.stats|default([]) %}
{% set testimonials = model.testimonials %}
{% set options = options is defined ? options : model.options %}

<flynt-component name="SectionSocialProof" {{ options.theme ? 'data-theme="' ~ options.theme ~ '"' }} class="edge sand bg-shade dark:bg-dark">
	<section class="tw-section">
		<div class="flex flex-col gap-6 md:gap-8">
			{% if heading %}
				{% include '@Components/Heading/index.twig' with { model: heading, options: options } only %}
			{% endif %}
			{% if action %}
				{% include '@Components/Action/index.twig' with { model: action, options: options } only %}
			{% endif %}
			<div class="mt-4 flex flex-col gap-2">
				<div class="bg-white rounded-t-xl p-4 md:p-6 dark:bg-dark-shade grid md:grid-cols-2 lg:grid-cols-4 divide-y md:divide-y-0 lg:divide-x divide-border dark:divide-border-secondary">
					{% for stat in stats %}
						<div class="flex flex-col gap-2 p-4 lg:p-6">
							<div class="text-2xl lg:text-4xl font-extrabold text-heading dark:text-white">{{ stat.figure }}</div>
							<div class="text-base text-tezt dark:text-text-dark">{{ stat.description }}</div>
						</div>
					{% endfor %}
				</div>
				<div class="bg-white rounded-b-xl p-4 md:p-6 dark:bg-dark-shade">
					{% if testimonials %}
						{% include '@Components/Testimonials/index.twig' with { model: testimonials, options: options } only %}
					{% endif %}
				</div>
			</div>
		</div>
	</section>
</flynt-component>
